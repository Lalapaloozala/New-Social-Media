CC = g++
CCFLAGS = -std=c++14 -Wall

all: simpler_client simpler_server

simpler_client: simpler_client.cc internet_client.h
    $(CC) $(CCFLAGS) -O3 simpler_client.cc -lboost_system -lboost_thread -pthread -osimpler_client

simpler_server: simpler_server.cc internet_server.h
    $(CC) $(CCFLAGS) -O3 simpler_server.cc -lboost_system -lboost_thread -pthread -osimpler_server

clean:
    rm -f simpler_client simpler_server *.o core
